        // --- RENDER PRODUCTS ---
        function renderProducts() {
            const grid = document.getElementById('product-grid');
            grid.innerHTML = '';

            const filteredProducts = currentFilter === 'all' 
                ? products 
                : products.filter(p => p.category === currentFilter);

            filteredProducts.forEach(product => {
                const card = document.createElement('div');
                card.className = "group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-slate-100 flex flex-col h-full";
                
                const fallbackImage = `https://placehold.co/600x400/e0f2fe/0ea5e9?text=${encodeURIComponent(product.name)}`;

                card.innerHTML = `
                    <div class="relative h-64 overflow-hidden bg-gray-200 cursor-pointer" onclick="openProductModal(${product.id})">
                        <img src="${product.image}" 
                             alt="${product.name}" 
                             onerror="this.src='${fallbackImage}'"
                             class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700">
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-300"></div>
                        <button onclick="event.stopPropagation(); addToCart(${product.id})" class="absolute bottom-4 right-4 bg-white p-3 rounded-full shadow-lg text-slate-800 hover:bg-ocean-500 hover:text-white transition transform translate-y-12 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 duration-300">
                            <i data-lucide="plus" class="w-5 h-5"></i>
                        </button>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="text-xs font-bold text-ocean-500 mb-2 uppercase tracking-wide">${product.category}</div>
                        <h3 class="font-bold text-slate-800 text-lg mb-2 group-hover:text-ocean-600 transition cursor-pointer" onclick="openProductModal(${product.id})">${product.name}</h3>
                        <p class="text-slate-500 text-sm line-clamp-2 mb-4 flex-grow">${product.description}</p>
                        <div class="flex items-center justify-between mt-auto">
                            <span class="text-xl font-bold text-slate-900">$${product.price.toFixed(2)}</span>
                            <button onclick="addToCart(${product.id})" class="text-sm font-semibold text-ocean-600 hover:text-ocean-800 transition">Add to Cart</button>
                        </div>
                    </div>
                `;
                grid.appendChild(card);
            });
            lucide.createIcons();
        }

        // --- FILTERS ---
        function setupFilters() {
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    buttons.forEach(b => {
                        b.classList.remove('bg-ocean-900', 'text-white', 'shadow-md');
                        b.classList.add('bg-white', 'text-slate-600');
                    });
                    btn.classList.remove('bg-white', 'text-slate-600');
                    btn.classList.add('bg-ocean-900', 'text-white', 'shadow-md');
                    
                    currentFilter = btn.dataset.category;
                    renderProducts();
                });
            });
        }

        // --- CART FUNCTIONALITY ---
        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            const overlay = document.getElementById('cart-overlay');
            const body = document.body;

            if (sidebar.classList.contains('translate-x-full')) {
                sidebar.classList.remove('translate-x-full');
                overlay.classList.remove('hidden');
                setTimeout(() => overlay.classList.remove('opacity-0'), 10);
                body.style.overflow = 'hidden';
            } else {
                sidebar.classList.add('translate-x-full');
                overlay.classList.add('opacity-0');
                setTimeout(() => overlay.classList.add('hidden'), 300);
                body.style.overflow = '';
            }
        }

        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const existingItem = cart.find(item => item.id === productId);

            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({ ...product, quantity: 1 });
            }

            updateCartUI();
            showToast(`Added ${product.name} to cart`);
            
            const sidebar = document.getElementById('cart-sidebar');
            if (sidebar.classList.contains('translate-x-full')) {
                toggleCart();
            }
        }

        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCartUI();
        }

        function updateQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(productId);
                } else {
                    updateCartUI();
                }
            }
        }

        function updateCartUI() {
            const container = document.getElementById('cart-items-container');
            const emptyState = document.getElementById('cart-empty-state');
            const countBadge = document.getElementById('cart-count');
            const headerCount = document.getElementById('cart-header-count');
            const subtotalEl = document.getElementById('cart-subtotal');
            const totalEl = document.getElementById('cart-total');

            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            countBadge.innerText = totalItems;
            headerCount.innerText = totalItems;
            
            if (totalItems > 0) {
                countBadge.classList.remove('scale-0');
            } else {
                countBadge.classList.add('scale-0');
            }

            if (cart.length === 0) {
                container.innerHTML = '';
                container.appendChild(emptyState);
                emptyState.classList.remove('hidden');
            } else {
                emptyState.classList.add('hidden');
                container.innerHTML = ''; 
                container.appendChild(emptyState);

                cart.forEach(item => {
                    const itemEl = document.createElement('div');
                    itemEl.className = "flex gap-4 animate-fadeIn";
                    itemEl.innerHTML = `
                        <div class="w-20 h-20 rounded-lg bg-gray-100 overflow-hidden flex-shrink-0">
                            <img src="${item.image}" alt="${item.name}" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-grow flex flex-col justify-between">
                            <div>
                                <h4 class="font-semibold text-slate-800 line-clamp-1">${item.name}</h4>
                                <p class="text-sm text-slate-500">$${item.price.toFixed(2)}</p>
                            </div>
                            <div class="flex items-center justify-between mt-2">
                                <div class="flex items-center border border-gray-200 rounded-lg">
                                    <button onclick="updateQuantity(${item.id}, -1)" class="p-1 px-2 hover:bg-gray-100 text-slate-600 transition rounded-l-lg">-</button>
                                    <span class="text-sm font-medium w-8 text-center">${item.quantity}</span>
                                    <button onclick="updateQuantity(${item.id}, 1)" class="p-1 px-2 hover:bg-gray-100 text-slate-600 transition rounded-r-lg">+</button>
                                </div>
                                <button onclick="removeFromCart(${item.id})" class="text-xs text-red-500 hover:text-red-700 font-medium underline">Remove</button>
                            </div>
                        </div>
                    `;
                    container.appendChild(itemEl);
                });
            }

            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            subtotalEl.innerText = '$' + subtotal.toFixed(2);
            totalEl.innerText = '$' + subtotal.toFixed(2);
        }

        function checkout() {
            if (cart.length === 0) return;
            const btn = document.querySelector('#cart-sidebar button[onclick="checkout()"]');
            const originalContent = btn.innerHTML;
            btn.innerHTML = `<i data-lucide="loader-2" class="animate-spin w-5 h-5"></i> Processing...`;
            btn.disabled = true;

            setTimeout(() => {
                showToast("Order placed successfully! üåä");
                cart = [];
                updateCartUI();
                toggleCart();
                btn.innerHTML = originalContent;
                btn.disabled = false;
                lucide.createIcons();
            }, 1500);
        }

        function showToast(message) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = "bg-ocean-900 text-white px-6 py-4 rounded-xl shadow-lg transform transition-all duration-300 translate-x-full flex items-center gap-3";
            toast.innerHTML = `<i data-lucide="check-circle" class="w-5 h-5 text-green-400"></i> <span class="font-medium">${message}</span>`;
            
            container.appendChild(toast);
            lucide.createIcons();

            requestAnimationFrame(() => {
                toast.classList.remove('translate-x-full');
            });

            setTimeout(() => {
                toast.classList.add('opacity-0', 'translate-x-full');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // --- MODAL & AI DESC ---
        function openProductModal(id) {
            const product = products.find(p => p.id === id);
            if(!product) return;

            document.getElementById('modal-img').src = product.image;
            document.getElementById('modal-cat').innerText = product.category;
            document.getElementById('modal-title').innerText = product.name;
            document.getElementById('modal-price').innerText = '$' + product.price.toFixed(2);
            document.getElementById('modal-desc').innerText = product.description;
            
            // AI Feature: Vibe Check (Description Enhancer)
            const aiBtn = document.getElementById('ai-desc-btn');
            aiBtn.innerHTML = `<i data-lucide="sparkles" class="w-3 h-3"></i> Get AI Vibe Check`;
            aiBtn.disabled = false;
            aiBtn.onclick = async () => {
                aiBtn.disabled = true;
                aiBtn.innerHTML = `<i data-lucide="loader-2" class="w-3 h-3 animate-spin"></i> Catching vibes...`;
                
                try {
                    const prompt = `Write a captivating, sensory-rich, 2-sentence description for this product: "${product.name}". It is a ${product.category}. Capture the feeling of the ocean, summer, and freedom. Keep it under 40 words.`;
                    
                    const response = await callGemini(prompt);
                    
                    // Typing effect
                    const descEl = document.getElementById('modal-desc');
                    descEl.style.opacity = '0';
                    setTimeout(() => {
                        descEl.innerText = response;
                        descEl.style.opacity = '1';
                    }, 300);

                    aiBtn.innerHTML = `<i data-lucide="check" class="w-3 h-3"></i> Vibes Checked`;
                } catch (error) {
                    console.error(error);
                    aiBtn.innerHTML = `Error. Try again.`;
                    aiBtn.disabled = false;
                }
                lucide.createIcons();
            };

            const btn = document.getElementById('modal-add-btn');
            btn.onclick = () => {
                addToCart(product.id);
                closeProductModal();
            };

            const modal = document.getElementById('product-modal');
            modal.classList.remove('hidden');
            lucide.createIcons();
        }

        function closeProductModal() {
            document.getElementById('product-modal').classList.add('hidden');
        }

        // --- AI CHATBOT FUNCTIONALITY ---
        function toggleChat() {
            const chatWindow = document.getElementById('chat-window');
            isChatOpen = !isChatOpen;
            if (isChatOpen) {
                chatWindow.classList.remove('scale-0', 'opacity-0');
                // Focus input after transition
                setTimeout(() => document.getElementById('chat-input').focus(), 300);
            } else {
                chatWindow.classList.add('scale-0', 'opacity-0');
            }
        }

        async function handleChatSubmit(e) {
            e.preventDefault();
            const input = document.getElementById('chat-input');
            const message = input.value.trim();
            if (!message) return;

            // Add User Message
            addChatMessage(message, 'user');
            input.value = '';
            
            const sendBtn = document.getElementById('chat-send-btn');
            sendBtn.disabled = true;

            // Loading State
            const loadingId = addChatMessage("Thinking...", 'bot', true);

            try {
                // System Context: Feed the product catalog to the AI
                const systemContext = `You are "Beach Bot", a helpful, laid-back personal shopper for "Blue Beach", a coastal lifestyle shop. 
                Here is our current product catalog JSON: ${JSON.stringify(products)}. 
                
                Rules:
                1. Only recommend products from this list.
                2. Be friendly, use occasional wave/beach emojis (üåä, üèñÔ∏è, üêö).
                3. Keep answers concise (under 3 sentences).
                4. If asked about prices, quote the exact price from the JSON.
                5. If the user asks for something we don't have, politely suggest a related item from the list or say we're out of stock.
                
                User Query: ${message}`;

                const response = await callGemini(systemContext);
                
                // Remove loading, add real response
                document.getElementById(loadingId).remove();
                addChatMessage(response, 'bot');

            } catch (error) {
                document.getElementById(loadingId).remove();
                addChatMessage("Sorry, the tide is high and I can't connect right now! üåä Try again later.", 'bot');
            } finally {
                sendBtn.disabled = false;
            }
        }

        function addChatMessage(text, sender, isLoading = false) {
            const container = document.getElementById('chat-messages');
            const id = 'msg-' + Date.now();
            
            const isBot = sender === 'bot';
            const align = isBot ? 'justify-start' : 'justify-end';
            const bg = isBot ? 'bg-white text-slate-600 border border-slate-100' : 'bg-ocean-500 text-white';
            const radius = isBot ? 'rounded-tl-none' : 'rounded-tr-none';
            const icon = isBot ? `<div class="w-8 h-8 bg-ocean-100 rounded-full flex-shrink-0 flex items-center justify-center text-ocean-600"><i data-lucide="bot" class="w-4 h-4"></i></div>` : '';

            const html = `
                <div id="${id}" class="flex gap-3 ${align} message-anim">
                    ${isBot ? icon : ''}
                    <div class="${bg} p-3 rounded-2xl ${radius} shadow-sm text-sm max-w-[80%] ${isLoading ? 'animate-pulse' : ''}">
                        ${text}
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', html);
            container.scrollTop = container.scrollHeight;
            lucide.createIcons();
            return id;
        }

        // --- GEMINI API CALL ---
        async function callGemini(promptText) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            
            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    contents: [{
                        parts: [{
                            text: promptText
                        }]
                    }]
                })
            });

            if (!response.ok) {
                throw new Error(`API Error: ${response.status}`);
            }

            const data = await response.json();
            return data.candidates[0].content.parts[0].text;
        }

    </script>
</body>
</html>
